<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="101dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/list_code"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/list_description"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/list_description"
            android:layout_marginTop="11dp"
            android:text="Code" />

        <TextView
            android:id="@+id/liste_dateFin"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/list_valeurRabais"
            android:layout_alignStart="@+id/list_valeurRabais"
            android:layout_alignTop="@+id/list_dateDebut"
            android:text="TextView" />

        <TextView
            android:id="@+id/list_dateDebut"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/list_code"
            android:layout_alignStart="@+id/list_code"
            android:layout_below="@+id/list_code"
            android:text="TextView" />

        <TextView
            android:id="@+id/symb2"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_code"
            android:layout_toEndOf="@+id/list_dateDebut"
            android:layout_toRightOf="@+id/list_dateDebut"
            android:text="-" />

        <TextView
            android:id="@+id/list_valeurRabais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/list_code"
            android:layout_toEndOf="@+id/symb2"
            android:layout_toRightOf="@+id/symb2"
            android:text="TextView" />

        <TextView
            android:id="@+id/symb1"
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/list_code"
            android:layout_toEndOf="@+id/list_code"
            android:layout_toRightOf="@+id/list_code"
            android:text=":" />

        <TextView
            android:id="@+id/liste_typeRabais"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/list_code"
            android:layout_toEndOf="@+id/list_valeurRabais"
            android:layout_toRightOf="@+id/list_valeurRabais" />

        <TextView
            android:id="@+id/list_description"
            android:layout_width="344dp"
            android:layout_height="49dp"
            android:layout_below="@+id/liste_dateFin"
            android:layout_centerHorizontal="true"
            android:text="TextView" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>